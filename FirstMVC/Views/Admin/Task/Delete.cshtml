@model FirstMVC.Models.TaskDB
@{
    ViewData["Title"] = "Delete Test Task";
}

<h1>Delete Test Task</h1>
<hr />

<h3>Are you sure you want to delete this task?</h3>

<dl class="row">
    <dt class="col-sm-2">Text (Northern Sami)</dt>
    <dd class="col-sm-10">@Model.Text</dd>

    <dt class="col-sm-2">Translation (Norwegian)</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<form asp-controller="Task" asp-action="Delete" method="post">
    <input type="hidden" asp-for="TaskId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Task" asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>


