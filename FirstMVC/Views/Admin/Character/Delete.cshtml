@model FirstMVC.Models.Characters
@{
    ViewData["Title"] = "Delete Character";
}
<h1>Delete Character</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<dl class="row">
    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
    
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>
<form asp-controller="Character" asp-action="Delete" method="post">
    <input type="hidden" asp-for="CharacterID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Character" asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>
