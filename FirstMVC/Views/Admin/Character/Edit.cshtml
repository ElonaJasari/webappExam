@model FirstMVC.Models.Characters
@{
    ViewData["Title"] = "Edit Character";
}
<h1>Edit Character</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Character" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CharacterID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <input asp-for="Role" class="form-control" readonly />
                <small class="text-muted">This field cannot be changed</small>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">Character Picture (URL)</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <small class="text-muted">Enter the URL of the character's image</small>
            </div>

            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="Dialog" />
            <input type="hidden" asp-for="Translate" />
            <input type="hidden" asp-for="Role" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="Dialog" />
            <input type="hidden" asp-for="Translate" />

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-controller="Character" asp-action="Index" class="btn btn-secondary">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
