@model IEnumerable<FirstMVC.Models.Characters>
@{
    ViewData["Title"] = "Characters";
}
<h1>Characters</h1>

@* Display success/error messages *@
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-controller="Character" asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Role</td>
            <td class="text-end">
                <a asp-controller="Character" asp-action="Edit" asp-route-id="@item.CharacterID" class="btn btn-sm btn-warning">Edit</a>
                @if (!string.Equals(item.CharacterCode, "ID_FRIEND1", System.StringComparison.OrdinalIgnoreCase) &&
                     !string.Equals(item.CharacterCode, "ID_FRIEND2", System.StringComparison.OrdinalIgnoreCase) &&
                     !string.Equals(item.CharacterCode, "ID_PARENT", System.StringComparison.OrdinalIgnoreCase) &&
                     !string.Equals(item.CharacterCode, "ID_PRINCIPAL", System.StringComparison.OrdinalIgnoreCase)&&
                     !string.Equals(item.CharacterCode, "ID_TEACHER", System.StringComparison.OrdinalIgnoreCase))
                {
                    <a asp-controller="Character" asp-action="Delete" asp-route-id="@item.CharacterID" class="btn btn-sm btn-danger">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
