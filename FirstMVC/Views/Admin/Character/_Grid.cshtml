@model IEnumerable<FirstMVC.Models.StoryAct>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.StoryActId)</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Character</th>
                <th>Choices</th>
                <th>Character Actions</th> <!-- Renamed column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.StoryActId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            @(item.Description.Length > 50 ? $"{item.Description.Substring(0, 47)}..." : item.Description)
                        }
                    </td>
                    <td>
                        @if (item.Character != null)
                        {
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(item.Character.ImageUrl))
                                {
                                    <img src="@item.Character.ImageUrl" alt="@item.Character.Name" 
                                         class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;" />
                                }
                                @item.Character.Name
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">No character</span>
                        }
                    </td>
                    <td>
                        <div class="choices-count">
                            @if (item.Choices != null && item.Choices.Any())
                            {
                                <span class="badge bg-info">@item.Choices.Count() choices</span>
                                <div class="choices-tooltip">
                                    @foreach (var choice in item.Choices)
                                    {
                                        <div class="choice-item @(choice.IsCorrect ? "text-success" : "")">
                                            â€¢ @choice.Text
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No choices</span>
                            }
                        </div>
                    </td>
                    <td>
                        @if (item.Character != null)
                        {
                            <a asp-controller="Character" asp-action="Edit" asp-route-id="@item.Character.CharacterID" 
                               class="btn btn-sm btn-outline-primary me-1" title="Edit Character">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Character" asp-action="Delete" asp-route-id="@item.Character.CharacterID" 
                               class="btn btn-sm btn-outline-danger" title="Delete Character">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No character</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>