@model FirstMVC.ViewModels.StoryPlayViewModel

@{
    ViewData["Title"] = Model.DisplayTitle;
}

<style>
    .visual-novel-container {
        position: relative;
        width: 100%;
        min-height: 100vh;
        overflow: hidden;
    }

    .scene-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .scene-background img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .game-ui {
        position: relative;
        z-index: 10;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .top-bar {
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 15px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .character-display {
        position: absolute;
        bottom: 0px;
        right: 0px;
        z-index: 5;
        height: 600px;
        overflow: hidden;
    }

    .character-display img {
        height: 700px;
        position: relative;
        bottom: -100px;
        filter: drop-shadow(5px 5px 10px rgba(0, 0, 0, 0.5));
    }

    .player-character-display {
        position: absolute;
        bottom: 0px;
        left: 20px;
        z-index: 5;
        height: 600px;
        overflow: hidden;
    }

    .player-character-display img {
        height: 700px;
        position: relative;
        bottom: -100px;
        filter: drop-shadow(5px 5px 10px rgba(0, 0, 0, 0.5));
    }

    .dialogue-box {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 70%;
        max-width: 650px;
        z-index: 15;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    /* Persona 5 Style - NPC Dialogue */
    .npc-dialogue {
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.95) 0%, rgba(20, 20, 20, 0.95) 100%);
        border-left: 8px solid #e74c3c;
        border-right: 4px solid #e74c3c;
        padding: 18px 22px;
        box-shadow: 0 15px 40px rgba(231, 76, 60, 0.4), inset 0 0 20px rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
        transform: skewX(-2deg);
    }

    .npc-dialogue::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #e74c3c, #c0392b);
    }

    .npc-dialogue::after {
        content: '';
        position: absolute;
        top: 10px;
        right: 20px;
        width: 60px;
        height: 60px;
        background: rgba(231, 76, 60, 0.2);
        transform: rotate(45deg);
        border: 2px solid rgba(231, 76, 60, 0.3);
    }

    .speaker-name {
        font-weight: 900;
        font-size: 1.2em;
        color: #e74c3c;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        transform: skewX(2deg);
        position: relative;
        z-index: 2;
    }

    .dialogue-text {
        font-size: 1em;
        line-height: 1.5;
        color: #ffffff;
        white-space: pre-line;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
        transform: skewX(2deg);
        position: relative;
        z-index: 2;
    }

    /* Persona 5 Style - Player Choices */
    .player-choices {
        background: linear-gradient(135deg, rgba(15, 15, 15, 0.95) 0%, rgba(30, 30, 30, 0.95) 100%);
        border: none;
        padding: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.7);
        position: relative;
        transform: skewX(-2deg);
    }

    .player-choices::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #f39c12, #e67e22);
    }

    .choices-label {
        font-weight: 900;
        font-size: 1em;
        color: #f39c12;
        margin-bottom: 10px;
        text-align: left;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        transform: skewX(2deg);
        padding-left: 10px;
        border-left: 5px solid #f39c12;
    }

    .choices-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
        transform: skewX(2deg);
    }

    .choice-button {
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
        color: white;
        border: none;
        border-left: 5px solid #3498db;
        padding: 18px 22px;
        font-size: 1.05em;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: left;
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

    .choice-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(52, 152, 219, 0.4), transparent);
        transition: left 0.5s;
    }

    .choice-button:hover {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        border-left-color: #f39c12;
        transform: translateX(8px) scale(1.05);
        box-shadow: 0 8px 25px rgba(231, 76, 60, 0.6);
    }

    .choice-button:hover::before {
        left: 100%;
    }

    .choice-button:active {
        transform: translateX(4px) scale(1.02);
    }

    /* Responsive: Stack choices on smaller screens */
    @@media (max-width: 768px) {
        .choices-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="visual-novel-container">
    @* Background Image *@
    @if (!string.IsNullOrEmpty(Model.CurrentAct.ImageUrl))
    {
        <div class="scene-background">
            <img src="@Model.CurrentAct.ImageUrl" alt="Scene" />
        </div>
    }

    <div class="game-ui">
        @* Top Status Bar *@
        <div class="top-bar">
            <div>
                <strong>@Model.DisplayTitle</strong>
                @if (!string.IsNullOrEmpty(Model.SelectedCharacterName))
                {
                    <span class="ms-3">Playing as: @Model.SelectedCharacterName</span>
                }
            </div>
            <div>
                <span class="ms-3">Trust: @Model.Trust</span>
            </div>
        </div>

        @* NPC Character Sprite with fallback *@
        @if (Model.CurrentAct.Character != null)
        {
            var npcImage = Model.CurrentAct.Character.ImageUrl;
            if (string.IsNullOrEmpty(npcImage))
            {
                // Fallbacks by known character names
                var name = Model.CurrentAct.Character.Name ?? string.Empty;
                if (name.Contains("Teach", StringComparison.OrdinalIgnoreCase))
                {
                    npcImage = "/images/teacher.png";
                }
                else if (name.Contains("Mother", StringComparison.OrdinalIgnoreCase) || name.Contains("Parent", StringComparison.OrdinalIgnoreCase))
                {
                    npcImage = "/images/mom_character.png";
                }
                else if (name.Contains("Áilu", StringComparison.OrdinalIgnoreCase))
                {
                    npcImage = "/images/Friend_1.png";
                }
                else if (name.Contains("Áila", StringComparison.OrdinalIgnoreCase))
                {
                    npcImage = "/images/Friend_2.png";
                }
            }
            if (!string.IsNullOrEmpty(npcImage))
            {
                <div class="character-display">
                    <img src="@npcImage" alt="@Model.CurrentAct.Character.Name" />
                </div>
            }
        }

        @* Player Character Sprite *@
        @if (Model.PlayerCharacter != null && !string.IsNullOrEmpty(Model.PlayerCharacter.ImageUrl))
        {
            <div class="player-character-display">
                <img src="@Model.PlayerCharacter.ImageUrl" alt="@Model.SelectedCharacterName" />
            </div>
        }

        @* Dialogue Box - Split into NPC dialogue and Player choices *@
        <div class="dialogue-box">
            @* NPC Dialogue Section *@
            <div class="npc-dialogue">
                @if (Model.CurrentAct.Character != null)
                {
                    <div class="speaker-name">@Model.CurrentAct.Character.Name</div>
                }
                
                <div class="dialogue-text">@Model.CurrentAct.Content</div>
            </div>

            @* Player Choices Section *@
            @if (Model.HasChoices)
            {
                <div class="player-choices">
                    <div class="choices-label">Your Response:</div>
                    <form asp-action="Choose" asp-controller="Story" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CurrentStoryActId" />

                        <div class="choices-container">
                        @foreach (var choice in Model.Choices)
                        {
                            <button type="submit" 
                                    class="choice-button" 
                                    name="SelectedChoiceId" 
                                    value="@choice.Id">
                                @choice.Text
                            </button>
                        }
                        </div>
                    </form>
                </div>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3" style="position: fixed; top: 100px; left: 50%; transform: translateX(-50%); z-index: 999;">@Model.ErrorMessage</div>
        }
    </div>
</div>
</div>
