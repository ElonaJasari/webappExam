@model FirstMVC.Models.Characters
@{
    ViewData["Title"] = "Character Details";
}
<h1>Character Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.CharacterID</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Dialog</dt>
    <dd class="col-sm-10">@Model.Dialog</dd>

    <dt class="col-sm-2">ImageUrl</dt>
    <dd class="col-sm-10">@Model.ImageUrl</dd>

    <dt class="col-sm-2">Translate</dt>
    <dd class="col-sm-10">@Model.Translate</dd>
</dl>
<p>
    <a asp-area="Admin" asp-controller="Character" asp-action="Edit" asp-route-id="@Model.CharacterID" class="btn btn-warning">Edit</a>
    <a asp-area="Admin" asp-controller="Character" asp-action="Index" class="btn btn-secondary">Back to list</a>
</p>
