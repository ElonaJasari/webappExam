@model Bures.Models.TaskDB
@{
    ViewData["Title"] = "Create Test Task";
}

<h1>Create Test Task</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Task" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Text" class="form-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-select" required>
                    <option value="">-- Select Type --</option>
                    <option value="word">Word (appears in Act 1)</option>
                    <option value="noun">Noun (appears in Act 1)</option>
                    <option value="sentence">Sentence (appears in Act 2)</option>
                    <option value="sentences">Sentences (appears in Act 2)</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
                <small class="text-muted">
                    <strong>Important:</strong> Words/Nouns appear in Act 1, Sentences appear in Act 2. 
                    Both will be included in the Act 3 test.
                </small>
            </div>

            <div class="mb-3">
                <label asp-for="StoryActId" class="form-label"></label>
                <input asp-for="StoryActId" class="form-control" />
                <span asp-validation-for="StoryActId" class="text-danger"></span>
                <small class="text-muted">
                    Optional link to the story act where this task belongs.
                </small>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="Task" asp-action="Index" class="btn btn-secondary">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


