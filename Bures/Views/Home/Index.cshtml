@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bures - Learn Northern Sami</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="landing-page">
        <div class="landing-container">
            <!-- Venstre del: animert maskott -->
            <div class="landing-left">
                <div class="mascot-container">
                    <div class="animated-mascot">
                        <div class="mascot-body">
                            <div class="mascot-head">
                                <div class="mascot-eyes">
                                    <div class="eye left-eye">
                                        <div class="pupil"></div>
                                    </div>
                                    <div class="eye right-eye">
                                        <div class="pupil"></div>
                                    </div>
                                </div>
                                <div class="mascot-smile"></div>
                                <div class="mascot-cheeks">
                                    <div class="cheek left-cheek"></div>
                                    <div class="cheek right-cheek"></div>
                                </div>
                            </div>
                        </div>
                        <div class="mascot-arms">
                            <div class="arm left-arm"></div>
                            <div class="arm right-arm"></div>
                        </div>
                        <div class="mascot-shadow"></div>
                    </div>
                </div>
            </div>

            <!-- Høyre del: tekst og knapper -->
            <div class="landing-right">
                <h1 class="landing-title">The fun and visual way to learn Northern Sami!</h1>
                <p class="landing-subtitle">Master Northern Sami through interactive lessons, engaging stories, and visual learning methods.</p>

                <div class="landing-buttons">
                    <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="~/Home/NewUserPage" class="btn start-btn">
                        Start Learning
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="~/Home/ContinuePage" class="btn sign-btn">
                        I already have an account
                    </a>
                </div>

                <div class="features">
                    <div class="feature">
                        
                        <span>Interactive Lessons</span>
                    </div>
                    <div class="feature">
                        
                        <span>Cool Storyline</span>
                    </div>
                    <div class="feature">
                      
                        <span>Fun Challenges</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
