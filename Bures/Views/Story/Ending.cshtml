@{
    ViewData["Title"] = "Ending";
    Layout = null;
    var endingType = (string?)ViewData["EndingType"] ?? "Unknown";
    var trust = (int?)ViewData["Trust"] ?? 0;
    var endingContent = (string?)ViewData["EndingContent"] ?? "The end.";
    var endingTitle = (string?)ViewData["EndingTitle"] ?? "Ending";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="margin: 0; padding: 0; overflow: hidden;">

<div class="ending-container">
    <div class="credits-box">
        <h1>@endingType Ending</h1>
        <h2>@endingTitle</h2>
        <div class="trust-display">Your final trust value was @trust.</div>
        <p>@endingContent</p>

        <div class="action-buttons">
            <form asp-action="ResetAndStart" asp-controller="Story" method="post" style="margin: 0;">
                <button type="submit" class="btn-play-again">Play Again</button>
            </form>
            <a asp-action="ContinuePage" asp-controller="Home" class="btn btn-secondary">Back to Menu</a>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


