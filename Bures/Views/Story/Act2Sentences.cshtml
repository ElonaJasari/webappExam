@model IEnumerable<Bures.Models.TaskDB>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Sentence Learning Session</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        body {
            background: url('/images/blackScreen.png') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
        }
        .chalkboard {
            padding: 40px;
            max-width: 700px;
            margin: 60px auto;
            background: rgba(0,0,0,0.7);
            border-radius: 16px;
            box-shadow: 0 0 40px #222;
        }
        .chalk-text {
            font-family: 'Comic Sans MS', 'Chalkduster', cursive;
            color: #fff;
            text-shadow: 2px 2px 0 #444, 0 0 8px #fff;
            font-size: 1.6rem;
            margin: 18px 0;
            letter-spacing: 1px;
        }
        .chalk-title {
            font-size: 2.4rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #fff;
            text-shadow: 3px 3px 0 #333, 0 0 12px #fff;
        }
    </style>
</head>
<body>
    <div class="chalkboard">
        <div class="chalk-title">Act 2: Sentence Learning</div>
        @foreach (var sentence in Model)
        {
            <div class="chalk-text">@sentence.Text</div>
        }
    </div>
</body>
</html>
