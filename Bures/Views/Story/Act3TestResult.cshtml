@{
    Layout = null;
    var score = ViewBag.Score ?? 0;
    var trustChange = ViewBag.TrustChange ?? 0;
}
<!DOCTYPE html>
<html>
<head>
    <title>Test Results</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        body {
            background: url('/images/blackEndingScreen.png') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
        }
        .result-box {
            padding: 40px;
            max-width: 600px;
            margin: 80px auto;
            background: rgba(0,0,0,0.85);
            border-radius: 16px;
            box-shadow: 0 0 40px #222;
            text-align: center;
        }
        .result-title {
            font-size: 2.2rem;
            font-weight: bold;
            color: #fff;
            margin-bottom: 24px;
            text-shadow: 2px 2px 0 #333, 0 0 10px #fff;
        }
        .result-score {
            font-size: 1.6rem;
            color: #fff;
            margin-bottom: 18px;
        }
        .result-trust {
            font-size: 1.3rem;
            color: #4caf50;
            margin-bottom: 18px;
        }
        .btn-next {
            background: #2196f3;
            color: #fff;
            font-size: 1.1rem;
            border: none;
            border-radius: 8px;
            padding: 10px 28px;
            cursor: pointer;
            margin-top: 24px;
        }
    </style>
</head>
<body>
    <div class="result-box">
        <div class="result-title">Test Results</div>
        <div class="result-score">Score: @score%</div>
        <div class="result-trust">Trust Change: @(trustChange >= 0 ? "+" : "")@trustChange</div>
        <form method="get" action="/Story/Play">
            <button type="submit" class="btn-next">Continue Story</button>
        </form>
    </div>
</body>
</html>
